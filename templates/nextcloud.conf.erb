<VirtualHost *:80>
  DocumentRoot "<%= node['nextcloud']['config']['webroot'] %>"
<% if node['platform_family'] == 'rhel' -%>
  ServerName <%= node['nextcloud']['config']['cloud_domain'] %>
<% end -%>

  <Directory <%= node['nextcloud']['config']['webroot'] %>>
    Require all granted
    AllowOverride All
    Options FollowSymLinks MultiViews
  
    <IfModule mod_dav.c>
      Dav off
    </IfModule>
  
  </Directory>
</VirtualHost>
